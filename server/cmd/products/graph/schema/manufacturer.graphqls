extend type Query {
  manufacturers(
    before: Cursor
    after: Cursor
    first: Int
    last: Int
  ): ManufacturerConnection!
  manufacturer(id: String!): Manufacturer!
}

extend type Mutation {
  manufacturerCreate(input: NewManufaturer!): Manufacturer!
}

extend type Product {
  manufacturer: Manufacturer!
}

type Manufacturer implements Node @key(fields: "id") {
  id: ID!
  name: String!
}

type ManufacturerConnection {
  edges: [ManufacturerEdge!]!
  pageInfo: PageInfo!
  totalCount: Int!
}

type ManufacturerEdge {
  node: Manufacturer
  cursor: Cursor!
}

input NewManufaturer {
  name: String!
}
