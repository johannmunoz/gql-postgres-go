extend type Query {
  topProducts(first: Int = 5): [Product!]
  products: [Product!]
  product(id: String!): Product!
}

extend type Mutation {
  productCreate(input: NewProduct): Product!
}

type Product @key(fields: "id") {
  id: String!
  upc: String!
  name: String!
  price: Int!
}

input NewProduct {
  name: String!
  upc: String!
  price: Int!
}
